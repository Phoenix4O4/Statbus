{% from 'macros/badge.html.twig' import PlayerBadge, RoundBadge %}
<table class="table table-bordered">
	<thead>
		<tr>
			<th>Date</th>
			<th>Round</th>
			<th>Admin</th>
			<th>Operation</th>
			<th>Target</th>
			<th>Log</th>
		</tr>
	</thead>
	<tbody>
		{% for l in logs %}
			<tr>
				<td>{{l.getDatetime|date()}}</td>
				<td>{{l.getRound ? RoundBadge(l.getRound)}}</td>
				<td>{{PlayerBadge(l.getAdminBadge)}}</td>
				<td class="fw-bold text-bg-{{l.getOperation.getCssClass}}">
					<i class="{{l.getOperation.getIcon}}"></i>
					{{l.getOperation.getShort|title}}</td>
				<td>{{PlayerBadge(l.getTargetBadge)}}</td>
				<td>{{l.getLog}}</td>
			{% endfor %}
		</tbody>
	</tbody>
</table>
