{% from 'macros/badge.html.twig' import PlayerBadge %}
{% if t.getBwoink %}
	<div class="card border border-danger">
		<div class="card-header text-bg-danger border-danger d-flex justify-content-between align-items-center">
			<span class="fw-bold"><i class="fa-solid fa-circle-exclamation"></i>
			{{PlayerBadge(t.getSenderBadge)}}
			*BWOINK*
			{{PlayerBadge(t.recipientBadge)}}</span>
            <span>{{t.getTimestamp|date}}</span>
		</div>
		<div class="card-body">{{t.getMessage|raw}}</div>
	</div>
{% else %}
	<div class="card border border-{{t.getAction.getCssClass}}">
		<div class="card-header text-bg-{{t.getAction.getCssClass}} border-{{t.getAction.getCssClass}} d-flex justify-content-between align-items-center">
			<span class="fw-bold"><i class="{{t.getAction.getIcon}}"></i>
			{{t.getAction.value}}
			{{t.getAction.getVerb}}
			{{PlayerBadge(t.getSenderBadge)}}</span>
            <span>{{t.getTimestamp|date}}</span></div>
		<div class="card-body">{{t.getMessage|raw}}</div>
	</div>
{% endif %}
