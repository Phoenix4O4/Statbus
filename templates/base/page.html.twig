{% extends 'base/index.html.twig' %}
{% block body %}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb">
            {% block breadcrumbs %}
            <li class="breadcrumb-item">
				<a href="{{url_for('home')}}">Home</a>
			</li>
            {% endblock %}
		</ol>
	</nav>
    {% block header %}
    {% endblock %}
	<div class="card">
		<h5 class="card-header fw-bold d-flex justify-content-between">
			{% block cardHeader %}
				<i class="fas fa-question-mark"></i>
				<span>A Header</span>
			{% endblock %}
		</h5>
		{% block cardSubHeader %}
		{% endblock %}
		<div class="card-body">
			{% block cardBody %}
            {% endblock %}
		</div>
	</div>
{% endblock %}
