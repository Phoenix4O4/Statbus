{% extends 'base/index.html.twig' %}

{% block body %}
{% from 'macros/badge.html.twig' import PlayerBadge %}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{url_for('home')}}">Home</a>
			</li>
			<li class="breadcrumb-item active">
				<a href="{{url_for('user.bans')}}">My Bans</a>
			</li>
		</ol>
	</nav>
	<div class="card">
		<h5 class="card-header fw-bold"><i class="fas fa-gavel"></i> My Bans</h5>
		<div class="card-body">
			<div class="list-group list-group-flush">
				{% for b in bans %}
					<a class="list-group-item" href="{{url_for('ban.view',{id: b.id})}}">
						<div class="d-flex w-100">
                        <span class="badge vertical-label text-bg-{{b.getStatus.getCssClass}}">{{b.getStatus.value}}</span>
							<div class="flex-grow-1 ms-4">
								<div class="d-flex justify-content-between border-bottom mb-1 align-items-center">
									<h5 class="fw-bold lh-base">Banned from <span class='badge text-bg-secondary'>{{b.role|join("</span>, <span class='badge text-bg-secondary'>")|raw}}</span> by {{PlayerBadge(b.getAdminBadge)}}</h5>
									<small class="flex-shrink-0">{{b.bantime|date('Y-m-d')}}</small>
								</div>
								<p class="mb-1">{{b.reason}}</p>
							</div>
						</div>
					</a>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
