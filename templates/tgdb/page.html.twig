{% set bodyClass = 'tgdb' %}
{% extends 'base/index.html.twig' %}
{% block body %}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb">
			{% block breadcrumbs %}
				<li class="breadcrumb-item">
					<a href="{{url_for('tgdb')}}">TGDB</a>
				</li>
			{% endblock %}
		</ol>
	</nav>
	{% block header %}
	{% endblock %}

	<div class="card">
		<div class="text-bg-secondary px-3 py-1 tlp-header"><strong>Reminder:</strong> Data in TGDB is considered <a href="{{url_for('tgdb.tlp')}}"><span class="badge badge-tlp text-bg-warning"><i class="fa-solid fa-traffic-light"></i> TLP:AMBER</span></a> unless otherwise noted</div>
		<h5 class="card-header fw-bold d-flex justify-content-between">
			{% block cardHeader %}
				<span><i class="fas fa-question-mark"></i>
				A Header</span>
			{% endblock %}
		</h5>
		{% block cardSubHeader %}{% endblock %}
		<div class="card-body">
			{% block cardBody %}{% endblock %}
		</div>
	</div>
{% endblock %}
