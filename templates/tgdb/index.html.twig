{% extends 'base/index.html.twig' %}
{% block body %}
<div class="text-bg-secondary px-3 py-1"><strong>Reminder:</strong> Data in TGDB is considered <span class="badge badge-tlp text-bg-warning"><i class="fa-solid fa-traffic-light"></i> TLP:AMBER</span> unless otherwise noted</div>
	<div class="card">
		<h3 class="card-header">
			TGDB
		</h3>
		<div class="card-body">
			<div class="row row-cols-4">
				{% for a in apps %}
					<div class="col d-flex">
						<a href="{{a.url}}" class="flex-fill btn btn-outline-primary active mb-4 {{a.disabled ? 'disabled'}}">
							<span class="text-white display-6">
								<i class="{{a.icon}}"></i>
							</span><br>{{a.name}}</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
